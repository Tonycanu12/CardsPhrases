---
import Layout from "../layouts/Layout.astro";
import Header from "../components/Header.astro";
import Card from "../components/Card.astro";
---

<Layout title="Cards.">
  <main>
    <Header />
    <div class="contCards">
      <Card img="frase #1" />
      <Card img="frase #2" />
      <Card img="frase #3" />
      <Card img="frase #4" />
      <div></div>
    </div>
  </main>

  <style>
    main {
      margin: auto;
      padding: 1rem;
      color: white;
      font-size: 20px;
      line-height: 1.6;
    }

    .contCards {
      display: grid;
      grid-template-columns: repeat(3, 1fr);
      grid-gap: 0.5rem;
    }

    @media screen and (max-width: 900px) {
      .contCards {
        display: grid;
        grid-template-columns: repeat(1, 1fr);
        grid-gap: 0.5rem;
      }
    }
  </style>
</Layout>
