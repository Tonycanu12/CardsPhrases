---
const img = Astro.props.img;
const frase = Astro.props.frase;
---

<div class="card">
  <div class="contIMG">
    <img class="img"
      src={img}/><img />
      <div class="text-overlay">{frase}</div>
  </div>
</div>

<style>
  .card {
    border: solid;
    display: flex;
    flex-direction: column;
    background: #FFFF;
    border-style: none;
    border-radius: 0.5rem;
    padding: 2px;
    height: 30vh;
  }
  /* .card:hover{
    transform:scale(1.1);
  } */
  .contIMG{
    position: relative;
    overflow: hidden;

  }

  .img{
    width: 100%;
    height: 100vh;
    max-height: 100%;
    border-radius: 0.5rem;
    object-fit: cover;
  }
  .text-overlay{
    position: absolute;
    top:50%;
    left: 50%;
    transform: translate(-50%, -50%);
    background-color:  rgba(143, 143, 143, 0.028);
    text-align: center;
    color:#ffff;
    width: calc(100% - 5px);
    box-sizing: border-box;
  }

</style>
